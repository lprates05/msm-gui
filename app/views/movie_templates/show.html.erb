<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<a href="/movies">
  Go back
</a>
<p>
<a href="/delete_movie/<%= @the_movie.id %>">
  Delete movie
</a>
 </p>

<hr>
<form action="/update_movie/<%= @the_movie.id %>" method="post">
  <p>
  <label for="updated_movie_title">Title</label>
  <input type="text" id="updated_movie_title" name="the_title" value="<%= @the_movie.title %>"></input>
  </p>
  <p>
  <label for="updated_movie_year">Year</label>
  <input type="text" id="updated_movie_year" name="the_year" value="<%= @the_movie.year %>"></input>
  </p>
  <p>
  <label for="updated_movie_duration">Duration</label>
  <input type="text" id="updated_movie_duration" name="the_duration" value="<%= @the_movie.duration %>"></input>
  </p>
  <label for="updated_movie_description">Description</label>
  <input type="text" id="updated_movie_description" name="the_description" value="<%= @the_movie.description %>"></input>
  </p>

  </p>
  <label for="updated_movie_image">Image</label>
  <input type="text" id="updated_movie_image" name="the_image" value="<%= @the_movie.image %>"></input>
  </p>

  </p>
  <label for="updated_movie_director_id">Director ID</label>
  <input type="text" id="updated_movie_director_id" name="the_director_id" value="<%= @the_movie.director_id %>"></input>
  </p>  
  <button>Update movie</button>
</form>
<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <%= the_director.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
