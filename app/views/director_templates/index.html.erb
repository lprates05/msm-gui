<h1>
  List of all directors
</h1>

<hr>
<form action="/insert_director" method="post">
  <p>
  <label for="new_director_name">Name</label>
  <input type="text" id="new_director_name" name="new_director_name"></input>
  </p>
  <p>
  <label for="new_director_dob">Dob</label>
  <input type="text" id="new_director_dob" name="new_director_dob"></input>
  </p>
  <p>
  <label for="new_director_bio">Bio</label>
  <input type="text" id="new_director_bio" name="new_director_bio"></input>
  </p>
  <label for="new_director_image">Image</label>
  <input type="text" id="new_director_image" name="new_director_image"></input>
  </p>

  <button>Create director</button>
</form>

<hr>
<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.order({:dob => :desc}).each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
