<h1>
  List of all actors
</h1>

<hr>
<form action="/insert_actor" method="post">
  <p>
  <label for="new_actor_name">Name</label>
  <input type="text" id="new_actor_name" name="new_actor_name"></input>
  </p>
  <p>
  <label for="new_actor_dob">Dob</label>
  <input type="text" id="new_actor_dob" name="new_actor_dob"></input>
  </p>
  <p>
  <label for="new_actor_bio">Bio</label>
  <input type="text" id="new_actor_bio" name="new_actor_bio"></input>
  </p>
  <label for="new_actor_image">Image</label>
  <input type="text" id="new_actor_image" name="new_actor_image"></input>
  </p>

  <button>Create actor</button>
</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
